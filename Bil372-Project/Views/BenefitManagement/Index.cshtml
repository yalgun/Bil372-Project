
@{
	Layout = "~/Views/Shared/AdminMain.cshtml";
}

<head>

	<script src="~/Scripts/bootstrap.min.js"></script>
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<div class="container-xl">
	<div class="table-wrapper">
		<div class="table-title">
			<div class="row">
				<div class="col-sm-12"><h2>Benefit Management</h2></div>
				<div class="col-sm-2">
					<a href="@Url.Action("Create","BenefitManagement")" class="btn btn-success btn-info"> <i class="material-icons"></i> <span>Izin Ekle</span></a>
				</div>
				<div class="col-sm-6"></div>
				<div class="col-sm-4">
					<div class="search-box">
						<input type="text" style="border-radius: 50px" class="form-control" placeholder="Search…">
					</div>
				</div>
				<div class="col-sm-12">
					<hr />
				</div>
			</div>
		</div>
		<table class=" table table-bordered table-striped table-hover">
			<tr>
				<th>#</th>
				<th>Personel Adı Soyadı</th>
				<th>sag_sig_aciklama</th>
				<th>tur</th>
				<th>hastalik_aciklama</th>
				<th>ilac_bilgisi</th>
				<th></th>
			</tr>
			@for (int i = 0; i < Model.Rows.Count; i++)
			{
				<tr>
					<td> @(i+1)</td>
					<td> @Model.Rows[i][0] @Model.Rows[i][1]</td>
					<td> @Model.Rows[i][2]</td>
					<td> @Model.Rows[i][3]</td>
					<td> @Model.Rows[i][4]</td>
					<td> @Model.Rows[i][5]</td>
					<td>
						<a href="@Url.Action("Edit","BenefitManagement", new { @ID = @Model.Rows[i][6]})" class="btn btn-success btn-primary">
							<i class="fa fa-edit"></i>

						</a>
						<a href="@Url.Action("Delete","BenefitManagement", new { @ID = @Model.Rows[i][6]})" class="btn btn-success btn-danger">
							<i class="fa fa-trash"></i>
						</a>
					</td>
				</tr>
			}
		</table>
	</div>
</div>

