@model Bil372_Project.Models.SertifikaModel
@using Bil372_Project.Models
@{
    Layout = "~/Views/Shared/AdminMain.cshtml";}
@{
    var data = (PersonelModel)ViewData["Message"];
}



<body>
    <div class="mid-class">
        <div class="art-right-w3ls">
            <h2> Add New Sertificate to Person</h2>
            @using (Html.BeginForm("getSelectedValue", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
            {
                <div class="form-left-to-w3l">
                    <div class="col-md-6">
                        <label>Person Name:</label>
                    </div>
                    @Html.DropDownList("Persons", ViewBag.Persons as SelectList)
                </div>
                <div class="form-left-to-w3l">
                    <div class="col-md-6">
                        <label>Sertificate Name:</label>
                    </div>
                    @Html.DropDownList("Sertificate", ViewBag.Sertificate as SelectList)
                </div>
               

                <div class="btnn">
                    <button type="submit">Add</button>
                    <br />
                </div>

                <div class="clear"></div>
            }

        </div>

    </div>

</body>


